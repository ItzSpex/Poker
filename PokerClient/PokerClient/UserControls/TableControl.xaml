<UserControl x:Class="PokerClient.TableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokerClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Image x:Name="TableFirstCardImage" Height="400" Width="200"/>
            <Image x:Name="TableSecondCardImage" Height="400" Width="200" Margin="5,0,0,0"/>
            <Image x:Name="TableThirdCardImage" Height="400" Width="200" Margin="5,0,0,0"/>
            <Image x:Name="TableFourthCardImage" Height="400" Width="200" Margin="5,0,0,0"/>
            <Image x:Name="TableFifthCardImage" Height="400" Width="200" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>

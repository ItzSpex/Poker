<Window x:Class="PokerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Signup" HorizontalAlignment="Left" Margin="208,179,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="LoginBtn" Content="Login" HorizontalAlignment="Left" Margin="88,179,0,0" VerticalAlignment="Top" Width="75" Click="LoginBtn_Click"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="84,91,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="88,133,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="userNameTB" HorizontalAlignment="Left" Height="23" Margin="155,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="155,133,0,0" Height="23" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ExceptionBox" HorizontalAlignment="Left" Height="82" Margin="73,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="387"/>

    </Grid>
</Window>

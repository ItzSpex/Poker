<UserControl x:Class="PokerClient.TableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokerClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Image Source="{Binding FirstCard}" Height="212" Width="100"/>
            <Image Source="{Binding SecondCard}" Height="212" Width="100" Margin="5,0,0,0"/>
            <Image Source="{Binding ThirdCard}" Height="212" Width="100" Margin="5,0,0,0"/>
            <Image Source="{Binding FourthCard}" Height="212" Width="100" Margin="5,0,0,0"/>
            <Image Source="{Binding FifthCard}" Height="212" Width="100" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
